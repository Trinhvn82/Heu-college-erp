{% extends "layouts/base.html" %}
{% load static %}
{% load humanize %} 

{% block title %} Lịch sử Thuê nhà {% endblock %}

{% block stylesheets %}
<style>
/* ----------------------------------
 * CSS Tùy chỉnh cho Bootstrap Timeline
 * ---------------------------------- */

.timeline {
    list-style: none;
    padding: 20px 0 20px;
    position: relative;
}

/* Đường kẻ chính (Timeline Line) */
.timeline:before {
    top: 0;
    bottom: 0;
    position: absolute;
    content: " ";
    width: 3px;
    background-color: #eeeeee;
    left: 50%; /* Đặt đường kẻ chính giữa */
    margin-left: -1.5px;
}

/* Các sự kiện (li) */
.timeline-item {
    margin-bottom: 20px;
    position: relative;
}

/* Đảm bảo nội dung không bị float */
.timeline-item:before,
.timeline-item:after {
    content: " ";
    display: table;
}

.timeline-item:after {
    clear: both;
}

/* Thiết lập cho panel (Card) */
.timeline-panel {
    width: 45%; /* Chiếm 45% chiều rộng mỗi bên */
    float: left;
    border-radius: 4px;
    position: relative;
}

/* Căn nội dung panel bên phải (các item chẵn) */
.timeline-item:nth-child(even) .timeline-panel {
    float: right;
}

/* Nút tròn/Badge */
.timeline-badge {
    color: #fff;
    width: 50px;
    height: 50px;
    line-height: 50px;
    font-size: 1.4em;
    text-align: center;
    position: absolute;
    top: 16px;
    left: 50%;
    margin-left: -25px;
    background-color: #999999; /* Màu mặc định */
    z-index: 100;
    border-radius: 50%;
}

/* Thiết lập Responsive cho màn hình nhỏ */
@media(max-width: 991px) {
    .timeline:before {
        left: 20px; /* Đẩy đường kẻ sang trái */
    }
    .timeline-item {
        margin-left: 40px;
    }
    .timeline-panel {
        width: 100%; /* Chiếm toàn bộ chiều rộng */
        float: none;
        padding-left: 70px; /* Thêm padding để tránh badge */
    }
    .timeline-item:nth-child(even) .timeline-panel {
        float: none; /* Bỏ float phải */
    }
    .timeline-badge {
        left: 20px; /* Đẩy badge về sát đường kẻ mới */
        margin-left: -25px;
    }
}
</style>
{% endblock stylesheets %}

{% block content %}

    <main class="content">

        {% include 'includes/navigation.html' %}
        {% include 'sms/alerts.html' %}
        
        <div class="preloader bg-soft flex-column justify-content-center align-items-center">
            <img class="loader-element animate__animated animate__jackInTheBox"
                 src="{% static 'assets/img/brand/light.svg' %}" height="60" alt="Volt logo">
        </div>

        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center py-4">
            <div class="btn-toolbar mb-2 mb-md-0">
                <ol class="breadcrumb breadcrumb-dark breadcrumb-transparent">
                    <li class="breadcrumb-item"><a href="\"><span class="fas fa-home"></span></a></li>
                    <li class="breadcrumb-item"><a href="{% url 'loc_list' %}">Vị trí</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Lịch sử Người thuê nhà</li>
                </ol>
            </div>
        </div>


        <div class="card border-light shadow-sm mb-4">
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-10 offset-lg-1">
                        <h2 class="h5 mb-4 text-center border-bottom pb-2">Dòng thời gian thuê nhà</h2>
                        
                        <ul class="timeline">
                            <li class="timeline-item">
                                <div class="timeline-badge bg-primary">
                                    <span class="fas fa-file-signature"></span>
                                </div>
                                
                                <div class="timeline-panel card shadow-sm mb-3 border-primary">
                                    <div class="card-body text-center">
                                        <h5 class="card-title text-primary">Bắt đầu một Hợp đồng mới?</h5>
                                        <p class="card-text text-muted mb-3">
                                            Tạo bản ghi hợp đồng tiếp theo hoặc hợp đồng thuê đầu tiên cho nhà trọ này.
                                        </p>
                                        
                                        <a href="{% url 'create_hr' id %}" 
                                        class="btn btn-primary **bg-primary** btn-sm text-white animate-up-2">
                                            <span class="fas fa-plus-circle me-2"></span> Tạo Hợp đồng Mới Ngay
                                        </a>
                                    </div>
                                </div>
                            </li>
                            {% if hrs %}
                                {% for record in hrs reversed %} 
                                    
                                    <li class="timeline-item">
                                        <div class="timeline-badge bg-{% if record.active %}success{% else %}danger{% endif %}"><span class="fas fa-home"></span></div>
                                        
                                        <div class="timeline-panel card shadow-sm mb-3 border-{% if record.active %}success{% else %}danger{% endif %}">
                                            <div class="card-header bg-light border-bottom-0 d-flex justify-content-between align-items-center">
                                                <h5 class="mb-0 text-{% if record.active %}success{% else %}danger{% endif %}">
                                                    {{ record.renter.hoten }}
                                                    <span class="badge bg-{% if record.active %}success{% else %}danger{% endif %}">{% if record.active %}ĐANG THUÊ{% else %}ĐÃ KẾT THÚC{% endif %}</span>
                                                </h5>
                                                <small class="text-muted">
                                                    <span class="fas fa-calendar-alt"></span> Bắt đầu: <strong>{{ record.rent_from|date:"d/m/Y" }}</strong>
                                                </small>
                                            </div>
                                            <div class="card-body">
                                                <p class="card-text mb-1">
                                                    <span class="fas fa-map-marker-alt"></span> **Nhà trọ:** {{ record.house.ten|default:"[Chưa có Tên]" }}
                                                </p>
                                                <p class="card-text mb-1">
                                                    <span class="fas fa-phone-alt"></span> **Liên hệ:** {{ record.renter.sdt }} | **CCCD:** {{ record.renter.cccd }}
                                                </p>
                                                
                                                <p class="card-text mb-1">
                                                    <span class="fas fa-money-bill-wave"></span> **Giá thuê:** {{ record.house.permonth|intcomma }} VNĐ/tháng
                                                </p>

                                                {% if not record.active %}
                                                    <p class="card-text mb-0 text-danger">
                                                        <span class="fas fa-clock"></span> **Kết thúc:** {{ record.rent_to|date:"d/m/Y" }}
                                                    </p>
                                                {% endif %}
                                                
                                                <hr class="my-2">
                                                <div class="dropdown">
                                                    <button class="btn btn-link text-dark mr-2 dropdown-toggle m-0 p-0" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                        <span class="icon icon-sm"><span class="fas fa-ellipsis-h icon-dark"></span></span> Tác vụ
                                                    </button>
                                                    <div class="dropdown-menu dashboard-dropdown dropdown-menu-left mt-2">
                                                        <a class="dropdown-item edit_item" href=""> 
                                                            <span class="fas fa-edit me-2"></span>Cập nhật
                                                        </a>
                                                        <a class="dropdown-item text-danger" href=""> 
                                                            <span class="fas fa-trash-alt me-2"></span>Xóa
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </li>
                                {% endfor %}
                            {% else %}
                                <div class="alert alert-warning text-center mt-3">
                                    Đây là nhà trọ chưa có lịch sử thuê. Hãy tạo hợp đồng đầu tiên!
                                </div>
                            {% endif %}
                        </ul>
                    </div>
                </div>
            </div>
        </div>        
    </main>

{% endblock content %}

{% block javascripts %}{% endblock javascripts %}